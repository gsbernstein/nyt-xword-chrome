{
  "name": "xword+",
  "version": "1.0",
  "description": "Improving the NYT Crossword",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
   {
     "matches": ["https://*.nytimes.com/crosswords*"],
     "js": ["contentScript.js"]
   }
  ],
  "commands": {
    "toggle-penicl": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Toggle penicl/pen"
    }
  },
  "manifest_version": 2
}